{
  "compilerOptions": {
    // ðŸ‘‡ This is the most important one
    "jsx": "react-jsx",         // For React 17+ (or use "react" for React 16 and below)

    // âœ… Make sure these are also present:
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx", "tests", "src/setupTests.ts"]
}
